{
  "name": "@xho/env-validator",
  "version": "1.0.2",
  "description": "Type-safe environment variable validator for Node.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanXh0/env-validator.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write 'src/**/*.ts'",
    "prepare": "npm run build",
    "docs": "typedoc --out docs src/index.ts",
    "docs:deploy": "npm run docs && gh-pages -d docs"
  },
  "keywords": [
    "environment",
    "validation",
    "typescript",
    "env",
    "dotenv",
    "config"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Ivan Apostolovski",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.7",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.14.0",
    "gh-pages": "^6.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3"
  }
}
